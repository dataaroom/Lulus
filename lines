
'''
Creat a object for pipe lines. All information will be loaded from Line List.
'''

import Units from uc

class Lines:

    def __init__(self, 
        Fluid_Code = 'PR', 
        Unit = '19', 
        Number = 'XXX', 
        Pipe_Spec = 'XXXX', 
        Insulation_Code = 'N', 
        Insulation_Thick = Units(),
        PID = ''
        Operating_Pressure = Units(),
        Operating_Temerature = Units(),
        Design_Pressure = Units(),
        Design_Temerature = Units(),
        Design_Pressure_Vacuum = 0.0,
        Design_Temerature_Min = units(),
        Testing_Type = '',
        Testing_Pressure = Units(),
        Paint_Code = '',
        Remarks = ''
        ): 
      
        self.Fluid_Code = Fluid_Code
        self.Unit = Unit
        self.Number = Number
        self.Pipe_Spec = Pipe_Spec
        self.Insulation_Code = Insulation_Code
        self.Insulation_Thick = Insulation_Thick
        self.PID = PID
        self.Operating_Pressure = Operating_Pressure
        self.Operating_Temerature = Operating_Temerature
        self.Design_Pressure = Design_Pressure
        self.Design_Temerature
        self.Design_Pressure_Vacuum = Design_Pressure_Vacuum
        self.Design_Temerature_Min = Design_Temerature_Min
        self.Testing_Type = Testing_Type
        self.Testing_Pressure = Testing_Pressure
        self.Paint_Code = Paint_Code
        self.Remarks = Remarks
      
